<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Register - Heaven Interior</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/styles/style.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>
<body>
  <div class="logo">
    HEAVEN
    <span class="interior">INTERIOR</span>
  </div>

  <div class="login-container">
    <h3>Register</h3>
    <form id="signupForm" action="/user/user_signup" method="POST">
      <div class="mb-3">
        <label for="email" class="form-label">Enter Email</label>
        <input type="text" name="email" class="form-control" id="email" value="<%= email || '' %>" required style="max-width: 30em;">
      </div>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input type="text" name="username" class="form-control" id="username" value="<%= username || '' %>" required style="max-width: 30em;">
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" name="password" class="form-control" id="password" required style="max-width: 30em;">
        <div id="passwordError" class="error-box"></div>
      </div>
      <div class="mb-3">
        <label for="confirmPassword" class="form-label">Confirm Password</label>
        <input type="password" name="confirmPassword" class="form-control" id="confirmPassword" required style="max-width: 30em;">
      </div>
      
      <button type="submit" class="btn btn-custom" style="background-color: green;">Sign Up</button>
    
      <% if (errorMessage) { %>
        <div class="alert alert-danger" role="alert">
          <%= errorMessage %>
        </div>
      <% } %>
    
      <% if (successMessage) { %>
        <div class="alert alert-success" role="alert">
          <%= successMessage %>
        </div>
      <% } %>
    </form>
    
    <div class="links-container">
      <a href="/user/user_login">Already have an account? Login</a>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    document.getElementById('signupForm').addEventListener('submit', function(event) {
      const password = document.getElementById('password').value;
      const confirmPassword = document.getElementById('confirmPassword').value;
      const passwordError = document.getElementById('passwordError');
      passwordError.textContent = '';

      // Check password criteria
      if (!/^(?=.*\d).{8,}$/.test(password)) {
        passwordError.textContent = "Password must be at least 8 characters long and contain at least one number.";
        event.preventDefault();
      }

      // Check if passwords match
      if (password !== confirmPassword) {
        passwordError.textContent = "Passwords do not match.";
        event.preventDefault();
      }
    });
  </script>
</body>
</html>
