    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script>
        function toggleProfileMenu() {
            const dropdown = document.querySelector('.profile-dropdown');
            dropdown.classList.toggle('visible');
            dropdown.classList.toggle('hidden');
        }

        function changeMainImage(imageSrc) {
    const mainImage = $('#main-image'); // Use jQuery for consistency

    mainImage.attr('src', imageSrc);
    mainImage.attr('data-zoom-image', imageSrc);

}

const mainImage = document.getElementById("main-image");
const zoomResult = document.getElementById("zoom-result");

// When mouse enters the image, show the zoom result area
mainImage.addEventListener('mousemove', function(e) {
    zoomResult.style.display = "block";
    zoom(e);
});

mainImage.addEventListener('mouseleave', function() {
    zoomResult.style.display = "none";
});

function zoom(e) {
    const posX = e.offsetX;
    const posY = e.offsetY;
    const width = mainImage.offsetWidth;
    const height = mainImage.offsetHeight;

    const zoomX = (posX / width) * 100;
    const zoomY = (posY / height) * 100;

    // Set the background of zoomResult to be the same image but zoomed
    zoomResult.style.backgroundImage = `url('${mainImage.src}')`;
    zoomResult.style.backgroundPosition = `${zoomX}% ${zoomY}%`;
}

    </script>
</body>
</html>
