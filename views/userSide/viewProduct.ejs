<body>

    <%- include('../partials/user_navbar.ejs') %>

    <div class="container">
    <h1><%= product.name %></h1>

    <!-- Breadcrumbs -->
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/user/home">Home</a></li>
        <li class="breadcrumb-item"><a href="/user/shop">Shop</a></li>
        <li class="breadcrumb-item active"><%= product.name %></li>
    </ol>
    
    <!-- Product layout -->
    <div class="product-container">
        <!-- Image Section -->
        <div class="image-section">
            <div class="thumbnail-container">
                <% product.images.forEach((image, index) => { %>
                    <% if (image) { %>
                        <img src="/<%= image.split('\\').pop().split('/').pop() %>" alt="<%= product.name %>" class="thumbnail" id="thumb-<%= index %>" onclick="changeMainImage('/<%= image.split('\\').pop().split('/').pop() %>')">
                        <% } %>
                <% }); %>
            </div>
        
            <!-- Main image -->
            <div class="main-image-container">
                <img id="main-image" src="/<%= product.images[0].split('\\').pop().split('/').pop() %>" class="main-image">
                <div id="zoom-result"></div>
            </div>
        </div>
        
        <!-- Product Details Section -->
        <div class="product-details">
          <div class="product-price">
                <% if (discountedPrice) { %>
                    <h3 style="display: inline; color: #3b940f; font-weight: 700;">₹<%= discountedPrice %></h3>
                    <span style="text-decoration: line-through; color: #999;">₹<%= originalPrice %></span>
                <% } else { %>
                    <h3>₹<%= originalPrice %></h3>
                <% } %>
            </div>
            <p class="product-rating">Rating: <%= product.rating %> / 5</p>
            <p class="product-description"><%= product.description %></p>
            <p class="product-category">Category: <strong><%= product.category ? product.category.name : 'Uncategorized' %></strong></p>
            <% if (product.stockStatus === 'In Stock') { %>
                <p style="color: green;"><%= product.stock %> left</p>
                <% } else { %>
                <p class="out-of-stock" style="color: #dc3545; font-weight: bold;">Out of stock</p>
            <% } %>
            
                       
         <!-- Offers Section -->
            <div class="offers">
                <h6>Available Offers</h6><br>
                <div class="offer-list">
                    <% offers.forEach(offer => { %>
                        <div style="display: flex; align-items: center;">
                            <i class="fas fa-tags" style="margin-right: 5px; color: #1db811;"></i> <!-- Font Awesome icon for offer -->
                            <h6 style="margin: 0; font-weight: bold;"><%= offer.title %></h6>
                            <span style="margin-left: 10px;">Discount: 
                                <%= offer.discountType === 'percentage' ? offer.discountValue + '%' : '₹' + offer.discountValue %>
                            </span>
                        </div>
                        
                    <% }); %>
                </div>
            </div>


            <!-- Action Buttons -->
            <div class="btn-inline">
                <% if (product.stockStatus === 'In Stock') { %>
                    <form action="/user/add-to-cart/<%= product._id %>" method="POST">
                        <button class="btn btn-success d-flex align-items-center">
                            <i class="fas fa-cart-plus me-2"></i> Add to Cart
                        </button>
                    </form>                
                <% } else { %> 
                  
                <% } %>
              
            
                <% if (product.stockStatus === 'In Stock') { %>
                    <!-- <form  method="POST"> -->
                        <button class="btn btn-warning d-flex align-items-center">
                            <i class="fas fa-bolt me-2"></i> Buy Now
                        </button>
                        <!-- </form>                 -->
                <% } else { %> 
                  
                <% } %>
            </div> 
            
        </div>
    </div>

    <div class="container" style="margin-top: 2%;">
        <!-- Highlights Section -->
        <div class="card mb-4">
            <div class="card-body">
                <h4>Highlights</h4>
                <div>
                    <% if (Array.isArray(product.highlights) && product.highlights.length > 0) { %>
                        <pre><%= product.highlights.join('\n') %></pre>
                    <% } else if (typeof product.highlights === 'string' && product.highlights.trim() !== '') { %>
                        <pre><%= product.highlights %></pre>
                    <% } else { %>
                        <p>No highlights available.</p>
                    <% } %>
                </div>
            </div>
        </div>
    
        <!-- Specifications Section -->
        <div class="card mb-4">
            <div class="card-body">
                <h4>Specifications</h4>
                <div>
                    <% if (typeof product.specifications === 'string' && product.specifications.trim() !== '') { %>
                        <pre><%= product.specifications %></pre>
                    <% } else { %>
                        <p>No specifications available.</p>
                    <% } %>
                </div>
            </div>
        </div>
        
        <!-- Related Products Section -->
        <div class="card mb-4">
            <div class="card-body">
                <h4>Related Products</h4>
                <div class="row">
                    <% relatedProducts.forEach(relatedProduct => { %>
                        <div class="col-md-3 mb-3">
                            <div class="card h-100 text-center">
                                <img src="/<%= relatedProduct.images[0] ? relatedProduct.images[0].split('\\').pop().split('/').pop() : 'placeholder.jpg' %>" 
                                     class="card-img-top img-fluid" alt="<%= relatedProduct.name %>" style="height: 100%;width: 100%;">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <a href="/user/shop/<%= relatedProduct._id %>" class="text-dark text-decoration-none">
                                            <%= relatedProduct.name %>
                                        </a>
                                    </h5>
                                    <p class="card-text"><%= relatedProduct.description %></p>
                                    <div class="product-price">
                                        <% if (discountedPrice) { %>
                                            <h3 style="display: inline; color: #70b44e; font-weight: 700;">₹<%= discountedPrice %></h3>
                                            <span style="text-decoration: line-through; color: #999;">₹<%= originalPrice %></span>
                                        <% } else { %>
                                            <h3>₹<%= originalPrice %></h3>
                                        <% } %>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <a href="/user/shop/<%= relatedProduct._id %>" class="btn btn-success">View Details</a>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </div>
    </div>

    <%- include('../partials/footer') %>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.min.js"></script>
