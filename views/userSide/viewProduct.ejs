    <style>

.main-image-container {
    position: relative;
    width: 500px; /* Adjust the size according to your layout */
}

.main-image {
    width: 100%;
}

#zoom-result {
    position: absolute;
    top: 0;
    left: 110%; /* Positioned next to the main image */
    width: 400px; /* Adjust as necessary */
    height: 400px; /* Adjust as necessary */
    border: 1px solid #d4d4d4;
    background-repeat: no-repeat;
    background-size: 200%; /* Make the background larger for zooming effect */
    display: none; /* Hidden by default, shown on hover */
}

    body {
        font-family: Arial, Helvetica, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f9f9f9;
    }
    
        .product-container {
            display: flex;
            flex-direction: row;
            border: 1px solid #ddd;
            border-radius: 5px;
            padding: 20px;
            background-color: white;
        }
    
        .image-section {
            display: flex;
            flex-direction: row;
            flex-grow: 1;
        }
    
        /* Column for vertical images */
        .thumbnail-container {
            display: flex;
            flex-direction: column;
            margin-top:4%;
            margin-right: 1%;
        }
    
        .thumbnail {
            cursor: pointer;
            width: 100px; /* Thumbnail width */
            height: 100px; /* Thumbnail height */
            margin-bottom: 10px;
            border: 1px solid #ddd;
            object-fit: cover;
        }
    
        /* Main image */
        .main-image {
        border: 1px solid #ddd;
        width: 25em; /* Increased width */
        height: 25em; /* Increased height */
        object-fit: cover;
        margin-right: 20px;
    }
    
        /* Product details section */
        .product-details {
            flex-grow: 1;
        }
    
        .product-price {
            font-size: 24px;
            color: #28a745;
            font-weight: bold;
            margin-bottom: 10px;
        }
    
        .product-discount {
            color: #dc3545;
            font-weight: bold;
            font-size: 20px;
        }
    
        .offers {
            background-color: #f8f9fa;
            padding: 15px;
            margin-bottom: 20px;
            border-radius: 5px;
        }
    
        .offer-item {
            margin-bottom: 10px;
        }
    
        .offer-item i {
            color: #28a745;
            margin-right: 5px;
        }
    
        .btn-inline {
        display: inline-flex;
        align-items: center;
        margin-right: 10px;
    }
    
        .btn-success, .btn-primary {
            width: 150px;
            margin-right: 10px;
        }
    
        .related-products-slider {
        position: relative;
        width: 100%;
        padding: 20px 0;
    }
    
    .slider-container {
        display: flex;
        justify-content: space-between;
    }
    
    .related-product-card {
        border: 1px solid #ddd;
        border-radius: 10px;
        overflow: hidden;
        background-color: white;
        transition: box-shadow 0.3s;
        display: flex;
        flex-direction: column;
        height: 75%;
        margin: 1em;
    }
    
    .card-content {
        display: flex;
        flex-direction: row;
    }
    
    .product-image {
        width: 70%;
    }
    
    .product-image img {
        max-width: 100%;
        height: auto;
    }
    
    .product-details {
        width: 60%; 
        padding-left: 15px;
    }
    
    .slick-prev, .slick-next {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        background-color: #fff;
        border: 1px solid #ddd;
        padding: 5px 10px;
        cursor: pointer;
        z-index: 10;
    }
    
    .slick-prev {
        left: 0;
    }
    
    .slick-next {
        right: 0;
    }
    
    @media screen and (max-width: 768px) {
        .related-product-card {
            width: 100%; /* Full width on smaller screens */
        }
    
        .card-content {
            flex-direction: column;
        }
    
        .product-image, .product-details {
            width: 100%;
        }
    
        .product-details {
            padding-left: 0;
            margin-top: 10px;
        }
    }
    
    .specs-reviews {
        padding: 20px;
        background-color: #f9f9f9;
        border: 1px solid #ddd;
        border-radius: 8px;
        margin-top: 20px;
    }

    h4 {
        font-weight: 600;
        color: #333;
        margin-bottom: 15px;
        border-bottom: 2px solid #ddd;
        padding-bottom: 5px;
    }

    .specs-reviews  {
        margin-bottom: 20px;
        padding: 15px;
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    pre {
        font-size: 14px;
        line-height: 1.6;
        white-space: pre-wrap;
        color: #555;
    }

    .review {
        background-color: #f8f9fa;
        padding: 10px;
        border-radius: 8px;
        margin-bottom: 10px;
    }

    .review strong {
        color: #007bff;
    }

