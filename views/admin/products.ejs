<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Management</title>
    
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.js"></script>
    
    <style>
        .action-buttons {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }
        .action-buttons button, .action-buttons a {
            width: 100%;
        }
        .image-preview img {
            width: 100px;
            height: 100px;
            margin-right: 5px;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2>Product Management</h2>
        
        <!-- Search Bar -->
        <form method="GET" action="/adminPanel/products" class="form-inline mb-3">
            <div class="form-group mr-2">
                <input type="text" name="search" class="form-control" placeholder="Search by name" value="<%= search %>">
            </div>
            <button type="submit" class="btn btn-success">Search</button>
        </form>

        <!-- Add Product Button -->
        <button type="button" class="btn btn-primary mb-3" data-toggle="modal" data-target="#addProductModal">Add Product</button>

        <!-- Product Table -->
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Category</th>
                    <th>Quantity</th>
                    <th>Stock </th>
                    <th>Created</th>
                    <th>Updated</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (products.length > 0) { %>
                    <% products.forEach(function(product) { %>
                        <tr>
                            <td>
                                <% if (product.images && product.images.length > 0) { %>
                                    <% let imagePath = product.images[0].split('\\').pop().split('/').pop(); %>
                                    <img src="/<%= imagePath %>" alt="Product Image" class="img-thumbnail" style="width: 100px; height: 100px;">
                                <% } else { %>
                                    <img src="/<%= product.images %>" alt="Product Image" class="img-thumbnail" style="width: 100px; height: 100px;">
                                <% } %>
                            </td>
                            <td><%= product.name %></td>
                            <td><%= product.description %></td>
                            <td>â‚¹<%= product.price %></td>
                            <td>
                                <% if (product.category) { %>
                                    <%= product.category.name %>
                                <% } else { %>
                                    <span class="text-danger">No Category</span>
                                <% } %>
                            </td>
                            <td><%= product.stock %></td>
                            <td><%= product.stockStatus %></td>
                            <td><%= new Date(product.createdAt).toLocaleDateString() %></td>
                            <td><%= new Date(product.updatedAt).toLocaleDateString() %></td>
                            <td>
                                <!-- Action Buttons -->
                                <div class="action-buttons">
                                    <a href="#" class="btn btn-info btn-sm" data-toggle="modal" data-target="#viewProductModal<%= product._id %>">View</a>                                    <button type="button" class="btn btn-warning btn-sm" data-toggle="modal" data-target="#editProductModal<%= product._id %>">Edit</button>
                                    <form action="/adminPanel/products/toggle-status/<%= product._id %>" method="POST" style="display:inline;">
                                        <button type="submit" class="btn btn-sm <%= product.isDelete ? 'btn-success' : 'btn-danger' %>">
                                            <%= product.isDelete ? "Restore" : "Delete" %>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="10">No products found</td>
                    </tr>
                <% } %>
            </tbody>
        </table>

        <!-- Pagination -->
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                    <a class="page-link" href="/adminPanel/products?page=<%= currentPage - 1 %>&search=<%= search %>" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                <% for (let i = 1; i <= totalPages; i++) { %>
                    <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                        <a class="page-link" href="/adminPanel/products?page=<%= i %>&search=<%= search %>"><%= i %></a>
                    </li>
                <% } %>
                <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                    <a class="page-link" href="/adminPanel/products?page=<%= currentPage + 1 %>&search=<%= search %>" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>

    <!-- Add Product Modal -->
    <div class="modal fade" id="addProductModal" tabindex="-1" aria-labelledby="addProductModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addProductModalLabel">Add Product</h5>
                    <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close"></button>
                </div>
                <form action="/adminPanel/products/add" method="POST" enctype="multipart/form-data">
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="productName">Product Name</label>
                            <input type="text" name="name" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="productDescription">Description</label>
                            <textarea name="description" class="form-control" required></textarea>
                        </div>
                        <div class="form-group">
                            <label for="productPrice">Price</label>
                            <input type="number" name="price" class="form-control"  min="0" required>
                        </div>
                        <div class="form-group">
                            <label for="productCategory">Category</label>
                            <select name="category" class="form-control" required>
                                <% categories.forEach(function(category) { %>
                                    <option value="<%= category._id %>"><%= category.name %></option>
                                <% }); %>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="productStock">Stock Quantity</label>
                            <input type="number" name="stockQuantity" class="form-control" min="0" required>
                        </div>
                        <div class="form-group">
                            <label for="productStatus">Stock Status</label>
                            <select name="stockStatus" class="form-control" required>
                                <option value="In Stock">In Stock</option>
                                <option value="Out of Stock">Out of Stock</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="image1">Product Image 1</label>
                            <input type="file" name="images" id="image1" accept="image/*" onchange="loadImage(this, 1)" required>
                            <div class="image-preview">
                                <img id="croppedImage1" class="img-thumbnail" style="width: 100px; height: 100px;" alt="Preview Image 1">
                            </div>
                            <button type="button" onclick="cropImage(1)">Crop Image 1</button>
                        </div>
                        
                        <div class="form-group">
                            <label for="image2">Product Image 2</label>
                            <input type="file" name="images" id="image2" accept="image/*" onchange="loadImage(this, 2)" required>
                            <div class="image-preview">
                                <img id="croppedImage2" class="img-thumbnail" style="width: 100px; height: 100px;" alt="Preview Image 2">
                            </div>
                            <button type="button" onclick="cropImage(2)">Crop Image 2</button>
                        </div>
                        
                        <div class="form-group">
                            <label for="image3">Product Image 3</label>
                            <input type="file" name="images" id="image3" accept="image/*" onchange="loadImage(this, 3)" required>
                            <div class="image-preview">
                                <img id="croppedImage3" class="img-thumbnail" style="width: 100px; height: 100px;" alt="Preview Image 3">
                            </div>
                            <button type="button" onclick="cropImage(3)">Crop Image 3</button>
                        </div>
                        
                        <!-- Hidden fields to hold cropped image data -->
                        <input type="hidden" id="croppedData1" name="croppedData1">
                        <input type="hidden" id="croppedData2" name="croppedData2">
                        <input type="hidden" id="croppedData3" name="croppedData3">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Add Product</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Edit Product Modal -->
    <% products.forEach(function(product) { %>
        <div class="modal fade" id="editProductModal<%= product._id %>" tabindex="-1" role="dialog" aria-labelledby="editProductModalLabel<%= product._id %>" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="editProductModalLabel<%= product._id %>">Edit Product</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <form action="/adminPanel/products/edit/<%= product._id %>" method="POST" enctype="multipart/form-data">
                        <div class="modal-body">
                            <div class="form-group">
                                <label for="productName">Product Name</label>
                                <input type="text" name="name" class="form-control" value="<%= product.name %>" required>
                            </div>
                            <div class="form-group">
                                <label for="productDescription">Description</label>
                                <textarea name="description" class="form-control" required><%= product.description %></textarea>
                            </div>
                            <div class="form-group">
                                <label for="productPrice">Price</label>
                                <input type="number" name="price" class="form-control" value="<%= product.price %>" min="0" required>
                            </div>
                            <div class="form-group">
                                <label for="productCategory">Category</label>
                                <select name="category" class="form-control" required>
                                    <% console.log('Product Category:', product.category); %>
                                    <% categories.forEach(function(category) { %>
                                        <option value="<%= category._id %>" 
                                            <%= product.category && product.category._id.toString() === category._id.toString() ? 'selected' : '' %> >
                                            <%= category.name %>                                        
                                        </option>
                                    <% }); %>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="productStock">Stock Quantity</label>
                                <input type="number" name="stockQuantity" class="form-control" value="<%= product.stock %>" min="0" required>
                            </div>
                            <div class="form-group">
                                <label for="productStatus">Stock Status</label>
                                <select name="stockStatus" class="form-control" required>
                                    <option value="In Stock" <%= product.stockStatus === 'In Stock' ? 'selected' : '' %>>In Stock</option>
                                    <option value="Out of Stock" <%= product.stockStatus === 'Out of Stock' ? 'selected' : '' %>>Out of Stock</option>
                                </select>
                            </div>
                            
                            <!-- Display existing images -->
                            <div class="form-group">
                                <label>Existing Images</label>
                                <div class="image-preview">
                                    <% if (product.images && product.images.length > 0) { %>
                                        <% product.images.forEach(function(image, index) { %>
                                            <% let imagePath = image.split('\\').pop().split('/').pop(); %>
                                            <div class="image-container">
                                                <img src="/<%= imagePath %>" alt="Product Image" class="img-thumbnail" style="width: 100px; height: 100px;">
                                                <input type="checkbox" name="deleteImages" value="<%= image %>"> Delete
                                            </div>
                                        <% }); %>
                                    <% } else { %>
                                        <p>No images uploaded.</p>
                                    <% } %>
                                </div>
                            </div>
                            
    
                            <div class="form-group">
                                <label for="images">Product Images</label>
                                <input type="file" name="images" id="images<%= product._id %>" accept="image/*" multiple>
                                <small class="text-muted">Note: You must upload at least 3 images.</small>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Save changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
       <!-- Popup Modal for Highlights and Specifications -->
       <div class="modal fade" id="viewProductModal<%= product._id %>" tabindex="-1" aria-labelledby="viewProductModalLabel<%= product._id %>" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="viewProductModalLabel<%= product._id %>">Product Highlights and Specifications</h5>
                    <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close"></button>
                </div>
                <form action="/adminPanel/products/specifications/<%= product._id %>" method="POST">
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="highlights">Highlights</label>
                            <textarea name="highlights" class="form-control" required><%= product.highlights || '' %></textarea>
                        </div>
                        <div class="form-group">
                            <label for="specifications">Specifications</label>
                            <textarea name="specifications" class="form-control" required><%= product.specifications || '' %></textarea>
                        </div>
                        <div class="form-group">
                            <label for="deliveryDays">Estimated Delivery (Days)</label>
                            <input type="number" name="deliveryDays" class="form-control" min="1" value="<%= product.deliveryDays || 7 %>" required>
                            <small class="form-text text-muted">Enter the number of days after the order date for estimated delivery.</small>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <% }); %>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            document.getElementById('images').addEventListener('change', function () {
                let files = this.files;
                if (files.length < 3) {
                    alert('Please upload at least 3 images.');
                    this.value = '';
                }
            });
        });


        let cropper1, cropper2, cropper3;

function loadImage(input, imageNumber) {
    const file = input.files[0];
    const reader = new FileReader();
    const previewId = `croppedImage${imageNumber}`;
    const cropperId = `cropper${imageNumber}`;

    reader.onload = function (e) {
        document.getElementById(previewId).src = e.target.result;

        // Initialize Cropper.js
        if (imageNumber === 1) {
            if (cropper1) cropper1.destroy();
            cropper1 = new Cropper(document.getElementById(previewId), {
                aspectRatio: 1, // Square aspect ratio
                viewMode: 1
            });
        } else if (imageNumber === 2) {
            if (cropper2) cropper2.destroy();
            cropper2 = new Cropper(document.getElementById(previewId), {
                aspectRatio: 1,
                viewMode: 1
            });
        } else if (imageNumber === 3) {
            if (cropper3) cropper3.destroy();
            cropper3 = new Cropper(document.getElementById(previewId), {
                aspectRatio: 1,
                viewMode: 1
            });
        }
    };
    reader.readAsDataURL(file);
}

function cropImage(imageNumber) {
    let croppedCanvas, croppedData;
    if (imageNumber === 1 && cropper1) {
        croppedCanvas = cropper1.getCroppedCanvas();
        croppedData = croppedCanvas.toDataURL();
        document.getElementById('croppedData1').value = croppedData;
        document.getElementById('croppedImage1').src = croppedData;
    } else if (imageNumber === 2 && cropper2) {
        croppedCanvas = cropper2.getCroppedCanvas();
        croppedData = croppedCanvas.toDataURL();
        document.getElementById('croppedData2').value = croppedData;
        document.getElementById('croppedImage2').src = croppedData;
    } else if (imageNumber === 3 && cropper3) {
        croppedCanvas = cropper3.getCroppedCanvas();
        croppedData = croppedCanvas.toDataURL();
        document.getElementById('croppedData3').value = croppedData;
        document.getElementById('croppedImage3').src = croppedData;
    }
}

    </script>
</body>
</html>
